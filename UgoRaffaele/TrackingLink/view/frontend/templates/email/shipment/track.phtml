						<?php $url = $block->getTrackingUrl($item); ?>
						<?php if ($url): ?>
							<a href="<?php echo $block->escapeHtml($url); ?>" target="_blank" rel="nofollow noopener">
								<?php echo $block->escapeHtml($item->getNumber()); ?>
